#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-push checks..."

# Run TypeScript type checking in apps/web
echo "  âœ“ Type checking..."
cd apps/web || exit 1
npm run typecheck
TYPE_CHECK_EXIT=$?

# Return to root
cd ../..

if [ $TYPE_CHECK_EXIT -ne 0 ]; then
  echo "âŒ TypeScript errors found. Please fix before pushing."
  exit 1
fi

echo "âœ… All pre-push checks passed!"

