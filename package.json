{
  "name": "flicklet-tv-tracker",
  "version": "28.160.0",
  "description": "Flicklet - TV & Movie Tracker",
  "main": "www/index.html",
  "scripts": {
    "dev": "vite",
    "scan:important": "node scripts/scan-important.mjs",
    "build": "vite build",
    "preview": "vite preview",
    "serve": "vite preview --port 8000",
    "audit:dup": "jscpd --threshold 0 --format markdown,json --output reports/jscpd .",
    "audit:dead": "depcheck && knip",
    "lint:strict": "eslint . --max-warnings=0",
    "a11y:axe": "axe http://localhost:8000 --timeout 60000 -r json -o reports/axe/axe.json",
    "lh:mobile": "lighthouse http://localhost:8000 --form-factor=mobile --output json --output-path=reports/lighthouse/mobile.json",
    "bundle:explore": "source-map-explorer 'www/**/*.js' --html reports/bundle.html",
    "validate:encoding": "node scripts/validate-encoding.js",
    "qa": "node qa/run.js",
    "qa:report": "node qa/run.js --report",
    "analyze:layout": "node scripts/dev/layoutForensics.js",
    "analyze:bundle": "npm run build",
    "css:guard": "node scripts/css-architecture-guard.js",
    "grep:layout": "rg -n --hidden -S -i '\\.home-group|#group-(1|2|3|4|5)-|\\.home-preview-row|\\.section-content|\\.preview-row-(container|scroll)|\\.row-inner|#currentlyWatchingScroll|#curated-section|#curatedSections|\\.curated-row|\\.card(\\b|--)|\\.card-actions|\\.(actions)\\b' --glob '!node_modules'",
    "verify:tokens": "node scripts/verify-tokens.js",
    "prepare": "husky install",
    "test:cards-v2": "npx playwright test tests/cards-v2.harness.spec.* tests/cards-v2.cw-harness.spec.* tests/cards-v2.upnext-harness.spec.*"
  },
  "dependencies": {
    "@playwright/test": "^1.55.0",
    "dotenv": "^16.3.1",
    "netlify-cli": "^23.9.1",
    "playwright": "^1.55.0"
  },
  "devDependencies": {
    "axe-core": "^4.10.3",
    "depcheck": "^1.4.7",
    "eslint": "^8.57.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-sonarjs": "^0.23.0",
    "eslint-plugin-unicorn": "^50.0.1",
    "fast-glob": "^3.3.3",
    "htmlparser2": "^10.0.0",
    "husky": "^9.1.7",
    "jscpd": "^3.5.10",
    "knip": "^4.6.0",
    "lighthouse": "^11.7.1",
    "lint-staged": "^16.1.6",
    "picocolors": "^1.1.1",
    "postcss": "^8.5.6",
    "postcss-safe-parser": "^7.0.1",
    "source-map-explorer": "^2.5.3",
    "terser": "^5.44.0",
    "vite": "^5.4.20",
    "webpack-bundle-analyzer": "^4.10.2"
  },
  "keywords": [
    "tv",
    "movie",
    "tracker",
    "pwa",
    "entertainment"
  ],
  "author": "Flicklet Team",
  "license": "MIT"
}
